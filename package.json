{
    "name": "REPLACE",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=production node server.js",
        "start:server": "node server.js",
        "start:local": "NODE_ENV=local concurrently --raw \"gulp build-local\" \"npm run start:server\" ",
        "build:develop": "gulp test && gulp build-develop",
        "build:production": "gulp test && gulp build-production",
        "test": "gulp globals && gulp test",
        "test-int": "gulp globals && gulp test-integration --exit",
        "coverage": "nyc --reporter=lcov node_modules/mocha/bin/_mocha test/unit/**/*.spec.js test/unit/**/**/**/*.spec.js  test/unit/**/**/*.spec.js --include-all-sources && open coverage/lcov-report/index.html",
        "coverage-integration": "nyc --reporter=lcov node_modules/mocha/bin/_mocha  test/integration/**/*.spec.js --include-all-sources --exit"
    },
    "engines": {
        "node": "^8.0.0",
        "npm": "^5.6.0"
    },
    "dependencies": {
        "body-parser": "~1.13.2",
        "compression": "~1.0.1",
        "concurrently": "^3.5.1",
        "express": "^4.13.1",
        "gulp": "^3.9.1"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-http": "^3.0.0",
        "gulp-bump": "^3.0.0",
        "gulp-gzip": "^1.4.2",
        "gulp-istanbul": "^1.1.3",
        "gulp-mocha": "^6.0.0",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^0.6.1",
        "gulp-tar": "^2.1.0",
        "gulp-util": "^3.0.8",
        "mocha": "^5.2.0",
        "nock": "^9.1.6",
        "nyc": "^12.0.2",
        "run-sequence": "^2.2.1",
        "sinon": "^6.1.3"
    }
}